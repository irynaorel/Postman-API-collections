			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.environment.set(\"localEmail\", pm.response.json().user.email);\r",
							"pm.environment.set(\"localName\", pm.response.json().user.name);\r",
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"user\": {\r\n        \"username\": \"{{$randomUserName}}\",\r\n        \"email\": \"{{$randomEmail}}\",\r\n        \"password\": \"{{localPassword}}\"\r\n    }\r\n}",
